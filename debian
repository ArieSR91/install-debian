apt update && apt upgrade -y && apt install mc proot-distro pulseaudio -y && proot-distro install debian
chmod +x fix-audio.sh
bash fix-audio.sh
pulseaudio --start
touch $HOME/ ;echo "clear
pulseaudio --start
# proot-distro login --user (username) debian
proot-distro login debian" >> $HOME/.bashrc
touch ../usr/var/lib/proot-distro/installed-rootfs/debian/bin/ ;echo "vncserver -kill :1
vncserver -kill :2
# vncserver -geometry 1280x720
vncserver" >> ../usr/var/lib/proot-distro/installed-rootfs/debian/bin/vnc-start
touch ../usr/var/lib/proot-distro/installed-rootfs/debian/bin/ ;echo "vncserver -kill :1
vncserver -kill :2" >> ../usr/var/lib/proot-distro/installed-rootfs/debian/bin/vnc-stop
touch ../usr/var/lib/proot-distro/installed-rootfs/debian/root/ ;echo "apt update && apt upgrade -y && apt install wget gnupg nano -y && chmod +x /bin/vnc-start && chmod +x /bin/vnc-stop && wget -q -O - https://archive.kali.org/archive-key.asc | apt-key add && echo -e '\033[1;92m' '
add repository Kali Linux:

nano /etc/apt/sources.list
deb http://http.kali.org/kali kali-rolling main non-free contrib
deb-src http://http.kali.org/kali kali-rolling main non-free contrib

After you added the Kali Linux repository run:
apt update && apt dist-upgrade -y && apt install gvfs-common gvfs-daemons gvfs-libs udisks2 sudo mc

If you want to install GUI type:
apt install xfce4 tigervnc-standalone-server dbus-x11 -y
' " >> ../usr/var/lib/proot-distro/installed-rootfs/debian/root/install-kali
cd ~
proot-distro login debian
